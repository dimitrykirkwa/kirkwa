            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="navbarCollapse">


                <ul class="nav navbar-nav">
                    @*<ul id="menu">*@
                    <li>@Html.ActionLink("Dashboard", "Index", "Home")</li>
