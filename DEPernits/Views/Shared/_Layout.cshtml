                            <li>@Html.ActionLink("Employees", "Index", "Employees")</li>
                            <li>@Html.ActionLink("Cars and Vehicles", "Index", "Cars")</li>
                            <li>@Html.ActionLink("Permits", "Index", "Permits")</li>
                            @*<li><a href="#">Something else here</a></li>*@
